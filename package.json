{
  "name": "ts-test-decorators",
  "version": "0.0.1",
  "description": "Write your tests in a Java-like annotation-driven manner via JS decorators.",
  "main": "index.js",
  "keywords": [
    "mocha",
    "typescript",
    "allure",
    "decorator"
  ],
  "author": "Sergey Korol",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/sskorol/ts-test-decorators"
  },
  "bugs": {
    "url": "https://github.com/sskorol/ts-test-decorators/issues"
  },
  "homepage": "https://github.com/sskorol/ts-test-decorators#README.md",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf ./coverage ./.allure-results ./.nyc_output ./package",
    "pretest": "yarn && tsc",
    "test": "yarn clean && yarn tslint && nyc mocha",
    "coverage": "codecov",
    "tslint-fix": "tslint --fix --project .",
    "tslint": "tslint --project .",
    "precommit": "lint-staged",
    "postcommit": "git update-index -g"
  },
  "devDependencies": {
    "@types/chai": "^4.1.6",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.0",
    "chai": "^4.2.0",
    "cheerio": "^1.0.0-rc.2",
    "codecov": "^3.1.0",
    "del": "^3.0.0",
    "husky": "^1.1.2",
    "lint-staged": "^7.3.0",
    "mocha": "^5.2.0",
    "mocha-typescript": "^1.1.17",
    "node-static": "^0.7.11",
    "nyc": "^13.1.0",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2",
    "server-destroy": "^1.0.1",
    "source-map-support": "^0.5.9",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-plugin-prettier": "^2.0.0",
    "typescript": "^3.1.3",
    "wdio-allure-reporter": "^0.8.2",
    "wdio-mocha-framework": "^0.6.3",
    "wdio-phantomjs-service": "^0.2.2",
    "webdriverio": "^4.13.2"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 95,
    "statements": 95,
    "functions": 95,
    "branches": 85,
    "extension": [
      ".ts"
    ],
    "exclude": [
      "test/**/*.*",
      "**/*.d.ts"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "all": true
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --parser typescript --write",
      "git add"
    ]
  }
}
